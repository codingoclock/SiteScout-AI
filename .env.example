# Example .env for SiteScoutAI (DO NOT commit real secrets)

# LLM
MODEL_TYPE=openai            # or 'open_source' / 'ollama'
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4o-mini
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# Storage
STORE_TYPE=redis            # 'redis', 'chromadb', or 'mongodb'
STORE_HOST=localhost
STORE_PORT=6379
CHROMA_PERSIST_DIR=./chroma_db

# MongoDB (if using mongodb store)
MONGODB_URI=
MONGODB_DB=sitescout

# Index / data
INPUT_FILES=./data
NAMESPACE=default

# Tunables
CHUNK_SIZE=1024
TEMPERATURE=0
PERSIST_DISK=false
